@model User
@{
    ViewData["Title"] = "userDetails";
    string role = "";

    if (@Model.Navigation_Instructor != null)
        role = "Instructor";

    else if (@Model.Navigation_Student != null)
        role = "Student";

    else if (@Model.Navigation_Admin != null)
        role = "Admin";
}


<img src="@Model.User_Image" class="card-img-top img-fluid" alt="..." style="width: auto; height:200px;">
<br />
<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Email</th>
            <th>Role</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.User_Name</td>
            <td>@Model.User_Email</td>
            <td>@Model.Navigation_Roles.LastOrDefault().Role_Type</td>
            <td>@Model.User_Password</td>
        </tr>
    </tbody>
</table>
