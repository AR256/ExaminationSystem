@model List<Admin>
   
@{
    ViewData["Title"] = "Index";
}

<h1>Admin List</h1>

<table class=" table table-striped table-bordered table-hover">
    <thead>
         <tr>

            <th>Admin Name</th>
            <th>Admin Branch</th>
            <th>Actions</th>
         </tr>
    </thead>
<tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Navigation_User.User_Name</td>
                <td>@item.Navigation_Branch.Branch_Name</td>
                <td>
                    <a asp-action="Details" asp-controller="Admin" asp-route-Id="@item.Admin_Id" class="btn btn-dark">Details</a>
                    <a asp-action="Edit" asp-controller="Admin" asp-route-Id="@item.Admin_Id" class="btn btn-dark">Edit</a>
                    <a asp-action="Delete" asp-action="Delete" asp-controller="User" asp-route-id="@item.Navigation_User.User_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
  
    </tbody>
</table>

<a asp-action="Add" asp-controller="Admin" class="btn btn-dark">Add an Admin</a>


