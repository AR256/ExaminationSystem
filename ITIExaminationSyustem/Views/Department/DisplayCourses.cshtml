@model List<Course>
@{
    ViewData["Title"] = "DisplayCourses";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Course name</th>
            <th>Duration</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course_Name</td>
                <td>@item.Course_Duration</td>
                <td>
                    <a asp-action="Details" asp-controller="Course" asp-route-id="@item.Course_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Course_Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Course_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />