@model List<Student>
@{
    ViewData["Title"] = "DisplayStudents";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Student name</th>
            <th>Email</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Navigation_User.User_Name</td>
                <td>@item.Navigation_User.User_Email</td>
                <td>
                    <a asp-action="Details" asp-controller="Student" asp-route-id="@item.Student_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Student_Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Student_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
