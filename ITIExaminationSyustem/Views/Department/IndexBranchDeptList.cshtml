@model List<Department>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Department</th>
            <th>Branch</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Navigation_MainDepartment.MainDepartment_Name</td>
                <td>@item.Navigation_Branch.Branch_Name</td>
                <td>
                    <a asp-action="Details" asp-controller="Department" asp-route-id="@item.Department_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Department_Id" class="btn btn-info">Edit</a>
                    <a asp-action="ManageCourses" asp-controller="Department" asp-route-id="@item.Department_Id" class="btn btn-info">Manage Courses</a>
                    <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Department_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />




