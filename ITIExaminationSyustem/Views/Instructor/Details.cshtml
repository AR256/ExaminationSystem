@model InstructorViewModel
@{
    ViewBag.Title = "Instructor Details";
}

<h1>Instructor Details</h1>

<img src="@Model.Instructor_Image" class="card-img-top img-fluid" alt="...">
<div class="card-body">
    <h2 class="card-title">@Model.Instructor_Name</h2>
    <h4 class="card-title">Email: @Model.Instructor_Email</h4>
    <h3>Departments</h3>
    <ul>
        @foreach(var item in Model.Departments)
        {
            <li>@item.Department_Name</li>
        }
    </ul>
    <hr />
    <h3>Courses</h3>
    <ul>
        @foreach (var item in Model.Courses)
        {
            <li>@item.Course_Name</li>
        }
    </ul>
    <hr />
    @if(Model.Managed_Departments != null)
    {
        <h3>Managed Departments</h3>
        <ul>
            @foreach (var item in Model.Managed_Departments)
            {
                <li>@item.Department_Name</li>
            }
        </ul>
    }
        
        
</div>
<a class="btn btn-dark mt-3" asp-action="index" asp-controller="Instructor">Go Back</a>
