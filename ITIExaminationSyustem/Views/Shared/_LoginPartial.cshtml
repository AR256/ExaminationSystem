@using System.Security.Claims
@using ITIExaminationSyustem.Repositories;
@if (User.Identity.IsAuthenticated)
{
        Claim idClaim = User.FindFirst("id");

        int userId;
        bool validId = int.TryParse(idClaim.Value, out userId);

    @if(User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Department" asp-action="DepartmentList" asp-route-branchId="@int.Parse(User.FindFirst("adminBranch").Value)">
