                <span class="d-none d-sm-inline">Courses</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="LogOut">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="d-none d-sm-inline">Log out</span>
            </a>
        </li>
    }
    else if (User.IsInRole("Instructor"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="InsDeptList" asp-route-insId="@int.Parse(User.FindFirst("InstructorID").Value)">My Departments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="LogOut">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="d-none d-sm-inline">Log out</span>
            </a>
        </li>
    }
    else if (User.IsInRole("DeptManager"))
    {

    }
    else if (User.IsInRole("SuperAdmin"))
    {
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
                <span class="d-none d-sm-inline">Home</span>
            </a>
    </li>
  
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="Index">
                <i class="fa fa-users"></i>
                <span class="d-none d-sm-inline">Students</span>
            </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Branch" asp-action="Index">
                <i class="fa-solid fa-building-columns"></i>
                <span class="d-none d-sm-inline">Branches</span>
            </a>
    </li>
    <li class="nav-item">

            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">
                <i class="fa fa-users"></i>
                <span class="d-none d-sm-inline">Admins</span>
            </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="user" asp-action="Index">
                <i class="fa fa-users"></i>
                <span class="d-none d-sm-inline">Users</span>
