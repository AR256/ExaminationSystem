                <span class="d-none d-sm-inline">Departments</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="LogOut">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="d-none d-sm-inline">Log out</span>
            </a>
        </li>
    }
    else if (User.IsInRole("Student"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Student" asp-action="StudentCourses" asp-route-id="@int.Parse(User.FindFirst("studentId").Value)">
